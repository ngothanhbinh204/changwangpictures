+SpaceToTop('space-header')
//- Mixin for reusable film item
mixin FilmItem(item, index)
	.film-item(data-aos="fade-up" data-aos-delay=(index % 2) * 100)
		.film-bg
			.img-ratio(class="ratio:pt-[1200_1440] lg:ratio:pt-[556_1440]")
				+PugImg(item.img)
			.film-overlay
		
		.film-content
			.container.max-w-full
				.content-wrapper
					.info-col
						h2.film-title= item.title
						.film-meta
							p.cate= item.category
							p.director Director: #{item.director}
							p.dp DP: #{item.dp}
							p.producer Produced by #{item.producer}
					
					.action-col
						+btnArrowLineWhite("View More")

section.film-list-page
	each film, index in films
		+FilmItem(film, index)
