	.detail-img
		.img-ratio(class="ratio:pt-[704_1440]")
			+PugImg("./img/banner_1.png")

section.home-connect.section-py
	.container
		h2.heading-1.uppercase.mb-10 CONNECT WITH US.
		.grid(class="grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-20")
			.col-left 
				.connect-img.h-full
					.img-ratio.h-full(class="ratio:pt-[600_600]")
						+PugImg("./img/home/connect.jpg")
			.col-right.flex.flex-col.justify-center.items-center
				p.title-28.mb-8.text-center Sign up to our 
					span.italic newsletter 
					| and stay up to date with our 
					br 
					| cultural 
					span.italic news, views & insights
				
				form.newsletter-form
					.wrapper-form 
						.form-group
							input(type="text" placeholder="FIRST NAME")
						.form-group
							input(type="text" placeholder="LAST NAME")
						.form-group
							input(type="email" placeholder="YOUR EMAIL ADDRESS HERE...")
						
					button(type="submit")
						| SUBSCRIBE 
						i.fa-regular.fa-arrow-right

