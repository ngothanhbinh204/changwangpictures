mixin WorkCard(data)
	.work-card
		.work-slider
			.swiper.work-swiper
				.swiper-wrapper
					if data.gallery
						each item in data.gallery
							.swiper-slide
								.img-ratio(class=data.ratio || "ratio:pt-[704_520]")
									if item.type == 'video'
										video(preload="auto" loop playsinline webkit-playsinline x5-playsinline style="width: 100%; height: 100%;" autoplay muted)
											source(src=item.src type="video/mp4")
									else
										+PugImg(item.src)
			.swiper-nav-custom
				.btn-prev
					i.fa-regular.fa-arrow-left-long
				.btn-next
					i.fa-regular.fa-arrow-right-long
		.work-content
			h3.title!= data.title
			p.desc!= data.desc
			p.tag!= data.subTitle

